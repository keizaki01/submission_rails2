<div class="container">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="enclosure_box>
  <div class="border-bottom">
    <h1>パスワードを忘れた場合</h1>
  </div>  
<form>

<div class="content_parts">
  <div class="border-bottom">
    <div class="form-group row">
      <label class="col-lg-3 for="email">メールアドレス</label>
      <div class="col-lg-9">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>   
    </div>
  </div>
</div>

<div class="actions">
  <div class="form-group">
    <%= f.submit "パスワードリセット案内", class: "btn btn-primary" %>
  </div>
</div>
<%= render "users/shared/links" %>
<% end %>
