<div class="container">
<%= render "shared/error", obj: @user %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="enclosure_box>
      <div class="border-bottom">
        <h1>新しいアカウントを作成</h1>
      </div>  
  <form>
    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="name">ユーザー名</label>
          <div class="col-lg-9">
            <%= f.text_field :name, class: "form-control", autofocus: true %>
          </div>   
        </div>
      </div>
    </div>

    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="email">メールアドレス</label>
          <div class="col-lg-9">
            <%= f.text_field :email, class: "form-control", autofocus: true %>
          </div>   
        </div>
      </div>
    </div>

    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="password">パスワード</label>
          <div class="col-lg-9">
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          </div>   
        </div>  
      </div>
    </div>

    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="password_confirmation">確認用パスワード</label>
          <div class="col-lg-9">
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>   
        </div>  
      </div>
    </div>

    <div class="actions">
      <div class="form-group">
        <%= f.submit "登録", class: "btn btn-primary" %>
      </div>
    </div>
  </form>
  </div>
  <% end %>
</div>
  



