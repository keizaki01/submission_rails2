<div class="container">
<%= render "shared/error", obj: @user %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="enclosure_box>
    <div class="border-bottom">
      <h1>ログイン</h1>
    </div> 
  <form>
    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="email">メールアドレス</label>
          <div class="col-lg-9">
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>   
      </div>
    </div>

    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="password">パスワード</label>
          <div class="col-lg-9">
            <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
          </div>
        </div>
      </div>
    </div>

    <div class="content_parts">
      <div class="border-bottom">
        <div class="form-group row">
          <label class="col-lg-3 for="remember_me">ログインを記憶</label>
          <div class="col-lg-9">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
            <% end %>     
          </div>   
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    </div>
  </form>  
  </div> 
  <% end %>
</div>


